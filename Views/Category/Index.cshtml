@model ltbdb.Models.BookViewAllContainer
@using ltbdb.Models
@using ltbdb.Core.Helpers

@{
	ViewBag.Title = "Alle Kategorien";
	ViewBag.Description = "Alle Kategorien";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="position: relative;">
	<div class="panel-menu">
		Anzahl Bücher in allen Kategorien: @Model.PageOffset.Items
	</div>
	<h2>Alle Inhalte</h2>
	<ul class="book">
		@foreach (var book in Model.Books) {
			<li>
				<a href="@Url.Action("view", "book", new { id = @book.Id, slug = book.Title.ToSlug() })">
					<div>
						<img src="@ImageStore.GetCDNPath(book.Filename, ImageType.PreferThumbnail)" alt="Cover" />
					</div>
					<span>Nr. @book.Number - @book.Title</span>
				</a>
			</li>
		 }
	</ul>
	<div class="pager">
		@if(Model.PageOffset.HasPrevious) {
			<a href="@Url.Action("index", "category", new { ofs = Model.PageOffset.Offset - Model.PageOffset.PageSize })"><i class="material-icons">keyboard_arrow_left</i> zurück</a>
		}
		@if(Model.PageOffset.HasNext) {
			<a href="@Url.Action("index", "category", new { ofs = Model.PageOffset.Offset + Model.PageOffset.PageSize })">weiter <i class="material-icons">keyboard_arrow_right</i></a>
		}
	</div>
</div>
