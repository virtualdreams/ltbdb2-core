server {
	listen 80;
	listen [::]:80;
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	
	server_name foobar.com;
	
	# access_log /var/log/nginx/ltb.access.log vhost;
	# error_log /var/log/nginx/ltb.error.log;
	
	ssl_certificate /etc/nginx/cert/foobar.com;
	ssl_certificate_key /etc/nginx/cert/foobar.com.key;
	
	server_tokens off;
	
	client_max_body_size 5M;
	
	root /foo/bar/wwwroot;
	
	if ($ssl_protocol = "") {
		rewrite ^ https://$host$request_uri? permanent;
	}

	location ~ ^/(content|css|js)/ {
		expires 30d;
		add_header Pragma public;
		add_header Cache-Control "public";
	}

	location /images/ {
		alias /foo/bar/ltbdb2-core-images/;
		expires 30d;
		add_header Pragma public;
		add_header Cache-Control "public";
	}
	
	location / {
		proxy_pass http://127.0.0.1:5000;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection keep-alive;
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
		proxy_cache_bypass $http_upgrade;
	}
}
