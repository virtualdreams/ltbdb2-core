@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4">
	<div class="col-lg-12">
		<div class="row">
			<div class="col-lg-2 mb-4">
				<nav class="nav flex-column">
					<a class="nav-link link-secondary @(ViewBag.AdminMenu == "home" ? "active" : "")" asp-route="admin"><i class="fa-solid fa-fw fa-home"></i> Home</a>
					<a class="nav-link link-secondary @(ViewBag.AdminMenu == "category" ? "category" : "")" asp-route="adminCategory"><i class="fa-solid fa-fw fa-gear"></i> Kategorien</a>
				</nav>
			</div>
			<div class="col-lg-6 mb-4">
				<div class="row mb-4">
					<h2>Administration</h2>
				</div>
				@RenderBody()
			</div>
		</div>
	</div>
</div>

@section script {
    @RenderSection("script", required: false)
}