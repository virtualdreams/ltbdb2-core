	ViewBag.Title = "Alle Kategorien";
	ViewBag.Description = "Alle Kategorien";
	ViewBag.Menu = "all";
}

<div class="row mt-4">
	<div class="col">
		<h1>Alle Kategorien <small class="text-muted">(@Model.PageOffset.Items)</small></h1>
	</div>
</div>

<partial name="_PartialBooks" model="Model.Books" />

<div class="row mt-4">
	<nav aria-label="page navigation">
		<ul class="pagination justify-content-center">
